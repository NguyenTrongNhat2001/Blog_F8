<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="form-group mt-4">
    <label for="description">Mô tả</label>
    <textarea class="form-control" id="description" name = "description">{{course.description}}</textarea>
  </div>

   

 <div class="form-group mt-4">
    <label for="name">Tên khóa học</label>
    <textarea class="form-control" id="name" name = "name">{{course.name}}</textarea>
  </div>

   <div class="form-group">
    <label for="videoId">Mã video</label>
    <textarea class="form-control" id="videoId" name = "videoId">{{course.videoId}}</textarea>
  </div>

  <div class="form-group">
    <label for="level">cấp độ</label>
    <textarea class="form-control" id="level" name = "level">{{course.level}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary mt-4">Sửa Khóa Học</button>
</form> 
</div>